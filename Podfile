# Uncomment the next line to define a global platform for your project
# platform :ios, '8.0'

target 'swift-tools' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for swift-tools

  # 数字跳动
  pod 'NumberMorphView'

  # VC动画跳转
  pod 'StarWars'
  
  # 画图框架
  pod 'Macaw'
  
  # UIView.ani..动画框架
  pod 'EasyAnimation'

  # TableViewCell CollectionViewCell 动画加载
  pod 'ViewAnimator'

  # segue跳转动画
  pod 'IBAnimatable'

  # 响应式
  pod 'RxSwift'
  pod 'RxCocoa'  
  pod 'RxDataSources'

  pod 'expanding-collection'
end
